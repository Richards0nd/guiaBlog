<%- include('../../components/head') %>

<body>
	<%- include('../../components/nav') %>
	<div class="container">
		<hr>
		<h2>Usuários</h2>
		<a class="btn btn-primary" href="users/create">Criar novo usuário</a>
		<hr>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
				</tr>
			</thead>
			<tbody>
				<% users.forEach(user => { %>
				<tr>
					<td><%= user.id %></td>
					<td><%= user.email %></td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</body>

<%- include('../../components/footer') %>

<script>
	function confirmDelete(event, form) {
		event.preventDefault()
		var decision = confirm('Deseja realmente deletar essa categoria?')
		if (decision) form.submit()
	}
</script>